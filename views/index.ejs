<!DOCTYPE html>
<html>
    <head>
        <script>
            function passToBack(){
                score = document.getElementById('inputValue').value;
                socket.emit('scoreChange', score);
                console.log('success');
                return false;
            }
        </script>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <script src="/socket.io/socket.io.js"></script>
    <script>
        var socket = io.connect('/');
    </script>
  </head>
  <body>
    <h1><%= title %></h1>
    <p>Welcome to <%= title %></p>
    <form onsubmit="passToBack(); return false;">
        <input type="text" name="score" id='inputValue'>
        <input type="submit" value="Submit">
    </form>
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js" type="text/javascript"></script>
    <script src="http://code.jquery.com/color/jquery.color-2.1.0.js"></script>
    <script src="/javascripts/scroll.js"></script>
  </body>
</html>
